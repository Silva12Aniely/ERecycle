<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".UserActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/musuperfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Perfil"
        app:titleTextColor="#fff">

    </androidx.appcompat.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#fff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_account" />

        <TextView
            android:id="@+id/idUpld"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginTop="-20dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do Usuario"
            android:textColor="#fff"
            android:textSize="22dp"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Usuario@erecycle.com.br"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_margin="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <EditText
                    android:id="@+id/edtEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="EndereÃ§o"
                    android:backgroundTint="#0D9412"
                    android:textColorHint="#0D9412"
                    android:textSize="22sp"/>

                <EditText
                    android:id="@+id/edtBairro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#0D9412"
                    android:hint="Bairro"
                    android:textColorHint="#0D9412"
                    android:textSize="22sp"
                    android:layout_below="@id/edtEnd"/>

                <EditText
                    android:id="@+id/edtCEP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edtBairro"
                    android:backgroundTint="#0D9412"
                    android:hint="CEP"
                    android:textColorHint="#0D9412"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/edtCidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edtCEP"
                    android:backgroundTint="#0D9412"
                    android:hint="Cidade"
                    android:textColorHint="#0D9412"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/edtEstado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edtCidade"
                    android:backgroundTint="#0D9412"
                    android:hint="Estado"
                    android:textColorHint="#0D9412"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/edtTel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edtEstado"
                    android:backgroundTint="#0D9412"
                    android:hint="Telefone"
                    android:textColorHint="#0D9412"
                    android:textSize="22sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sair"
                    android:textSize="18sp"
                    android:layout_below="@id/edtTel"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="#0D9412"/>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>