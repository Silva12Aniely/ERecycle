<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".UserActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/musuperfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Perfil"
        app:titleTextColor="#fff">

    </androidx.appcompat.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#fff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_account" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do Usuario"
            android:textColor="#fff"
            android:textSize="22dp"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Usuario@erecycle.com.br"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <TextView
                    android:id="@+id/lblRua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rua:"
                    android:textSize="25sp"
                    android:textColor="#fff"/>

                <EditText
                    android:id="@+id/edtRua"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#fff"
                    android:layout_toRightOf="@id/lblRua"/>

                <TextView
                    android:id="@+id/lblNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NÃºmero:"
                    android:textColor="#fff"
                    android:textSize="25sp"
                    android:layout_below="@id/lblRua"/>

                <EditText
                    android:id="@+id/edtNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/lblNum"
                    android:backgroundTint="#fff"
                    android:layout_below="@id/lblRua"/>

                <TextView
                    android:id="@+id/lblBairro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblNum"
                    android:text="Bairro:"
                    android:textColor="#fff"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/edtBairro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblNum"
                    android:layout_toRightOf="@id/lblBairro"
                    android:backgroundTint="#fff" />

                <TextView
                    android:id="@+id/lblCEP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblBairro"
                    android:text="CEP:"
                    android:textColor="#fff"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/edtCEP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblBairro"
                    android:layout_toRightOf="@id/lblCEP"
                    android:backgroundTint="#fff" />

                <TextView
                    android:id="@+id/txtCid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblCEP"
                    android:text="Cidade:"
                    android:textColor="#fff"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/edtCid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lblCEP"
                    android:layout_toRightOf="@id/txtCid"
                    android:backgroundTint="#fff" />
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>